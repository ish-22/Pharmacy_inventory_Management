@model IEnumerable<Staff.Models.Drug>

@{
    ViewData["Title"] = "Drug Inventory";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drugs List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #6B48FF, #00DDEB);
            min-height: 100vh;
            padding: 40px;
            color: #ffffff;
        }

        h2 {
            color: #ffffff;
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
        }

        .create-link {
            display: inline-block;
            padding: 10px 20px;
            background: linear-gradient(45deg, #40c057, #82c91e);
            color: #ffffff;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

            .create-link:hover {
                background: linear-gradient(45deg, #34a148, #6ba718);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(64, 192, 87, 0.4);
                color: #ffffff;
                text-decoration: none;
            }

        .table {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .table th {
                background: rgba(107, 72, 255, 0.3);
                color: #E0E0FF;
                padding: 15px;
                border: none;
            }

            .table td {
                color: black;
                padding: 15px;
                border: none;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

            .table tr:last-child td {
                border-bottom: none;
            }

            .table tr:hover {
                background: rgba(255, 255, 255, 0.05);
            }

        .action-btn {
            color: #ffffff;
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-right: 5px;
        }

        .edit-btn {
            background: linear-gradient(45deg, #4facfe, #00f2fe);
        }

            .edit-btn:hover {
                background: linear-gradient(45deg, #3d8cdc, #00d0dc);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(79, 172, 254, 0.4);
            }

        .details-btn {
            background: linear-gradient(45deg, #FF6B6B, #FF8E53);
        }

            .details-btn:hover {
                background: linear-gradient(45deg, #e55a5a, #e77d42);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(255, 107, 107, 0.4);
            }

        .delete-btn {
            background: linear-gradient(45deg, #ff3f34, #ff6b6b);
        }

            .delete-btn:hover {
                background: linear-gradient(45deg, #e02e23, #e55a5a);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(255, 63, 52, 0.4);
            }
    </style>
</head>
<body>
    <h2>Drugs List</h2>

    <div class="text-center">
        <a href="@Url.Action("Create")" class="create-link">Add New Drug</a>
    </div>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Stock</th>
            <th>Type</th>
            <th>Expiry Date</th>
            <th>Actions</th>
        </tr>
        @foreach (var drug in Model)
        {
            <tr>
                <td>@drug.DrugId</td>
                <td>@drug.Name</td>
                <td>@drug.StockQuantity</td>
                <td>@drug.Type</td>
                <td>@drug.ExpiryDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = drug.DrugId })" class="action-btn edit-btn">Edit</a>
                    <a href="@Url.Action("Details", new { id = drug.DrugId })" class="action-btn details-btn">Details</a>
                    <a href="@Url.Action("Delete", new { id = drug.DrugId })" class="action-btn delete-btn">Delete</a>
                </td>
            </tr>
        }
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>