@model Pharmacy.Models.ManufacturingPlant

@{
    ViewData["Title"] = "Edit Manufacturing Plant";
}

<style>
    body {
        background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        padding: 40px 20px;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        padding: 30px;
        max-width: 600px;
        margin: 0 auto;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .form-header {
        background: linear-gradient(to right, #2a5298, #1e3c72);
        color: #fff;
        padding: 15px 0;
        margin: -30px -30px 30px -30px;
        border-radius: 20px 20px 0 0;
        text-align: center;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .form-subheader {
        color: #2a5298;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-label {
        color: #2a5298;
        font-weight: 600;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 12px;
        transition: all 0.3s ease;
        background: #fff;
    }

        .form-control:focus {
            border-color: #2a5298;
            box-shadow: 0 0 10px rgba(42, 82, 152, 0.3);
        }

    .btn-primary {
        background: linear-gradient(to right, #2a5298, #1e3c72);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(42, 82, 152, 0.4);
        }

    .btn-secondary {
        background: linear-gradient(to right, #6c757d, #adb5bd);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background: linear-gradient(to right, #adb5bd, #6c757d);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }
</style>

<div class="container">
    <div class="form-card">
        <h2 class="form-header">Edit Manufacturing Plant</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="PlantId" type="hidden" />

            <h4 class="form-subheader">Plant Details</h4>

            <div class="mb-4">
                <label asp-for="Location" class="form-label"></label>
                <input asp-for="Location" class="form-control" placeholder="Enter plant location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Contact" class="form-label"></label>
                <input asp-for="Contact" class="form-control" placeholder="Enter contact details" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script>
        // Real-time validation feedback
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('input', function() {
                if (this.classList.contains('is-invalid') && this.value) {
                    this.classList.remove('is-invalid');
                }
            });
        });
    </script>
}