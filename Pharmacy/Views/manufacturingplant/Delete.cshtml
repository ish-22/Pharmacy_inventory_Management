@model Pharmacy.Models.ManufacturingPlant

@{
    ViewBag.Title = "Delete Manufacturing Plant";
}

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(to right, #ff758c, #ff7eb3); /* Beautiful gradient background */
        font-family: 'Arial', sans-serif;
    }

    .container-box {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    h2 {
        color: #dc3545;
        font-weight: bold;
    }

    h4 {
        color: #6c757d;
    }

    .btn-delete {
        background: #dc3545;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 6px;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-delete:hover {
            background: #b02a37;
        }

    .btn-back {
        background: #6c757d;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 6px;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-back:hover {
            background: #5a6268;
        }

    .info-box {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-top: 15px;
    }

    dt {
        font-weight: bold;
    }
</style>

<!-- Delete Confirmation Box -->
<div class="container-box">
    <h2>Delete Manufacturing Plant</h2>

    <h4>Are you sure you want to delete this?</h4>

    <div class="info-box">
        <h4>Plant Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Location:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-4">Contact:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact)</dd>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="mt-3">
            <button type="submit" class="btn btn-delete">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a href="@Url.Action("Index")" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    }
</div>
