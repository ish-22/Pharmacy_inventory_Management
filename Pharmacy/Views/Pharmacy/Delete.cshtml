@model Pharmacy.Models.pharmacy

@{
    ViewBag.Title = "Delete";
}

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(135deg, #ff9a9e, #fad0c4); /* Soft pink gradient */
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        color: #dc3545;
        text-align: center;
    }

    h3 {
        color: #333;
    }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        margin-bottom: 15px;
        color: #555;
    }

    .btn-custom {
        border-radius: 5px;
        font-weight: bold;
        padding: 8px 12px;
        color: white;
        text-decoration: none;
        display: inline-block;
        margin: 5px;
    }

    .btn-delete {
        background: #dc3545;
    }

        .btn-delete:hover {
            background: #c82333;
        }

    .btn-back {
        background: #007bff;
    }

        .btn-back:hover {
            background: #0056b3;
        }
</style>

<!-- Main Container -->
<div class="container">
    <h2>Delete Pharmacy</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <dl class="dl-horizontal">
        <dt>Email:</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Password:</dt>
        <dd>@Html.DisplayFor(model => model.Password)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <input type="submit" value="Delete" class="btn btn-custom btn-delete" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-custom btn-back" })
        </div>
    }
</div>
