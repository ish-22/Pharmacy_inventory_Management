@model Pharmacy.Models.pharmacy

@{
    ViewBag.Title = "Details";
}

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(135deg, #74ebd5, #acb6e5); /* Soft gradient background */
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        color: #007bff;
        text-align: center;
    }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        margin-bottom: 15px;
        color: #555;
    }

    .btn-custom {
        border-radius: 5px;
        font-weight: bold;
        padding: 8px 12px;
        color: white;
        text-decoration: none;
        display: inline-block;
        margin: 5px;
    }

    .btn-edit {
        background: #28a745;
    }

        .btn-edit:hover {
            background: #218838;
        }

    .btn-back {
        background: #007bff;
    }

        .btn-back:hover {
            background: #0056b3;
        }
</style>

<!-- Main Container -->
<div class="container">
    <h2>Pharmacy Details</h2>
    <hr />

    <dl class="dl-horizontal">
        <dt>Email:</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Password:</dt>
        <dd>@Html.DisplayFor(model => model.Password)</dd>
    </dl>

    <div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-custom btn-edit" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-custom btn-back" })
    </div>
</div>
