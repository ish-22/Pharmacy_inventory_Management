@model Pharmacy.Models.Drug

@{
    ViewBag.Title = "Create New Drug";
}

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(to right, #00c6ff, #0072ff); /* Cool Blue Gradient */
        font-family: 'Arial', sans-serif;
    }

    .container-box {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .form-label {
        font-weight: bold;
        color: #343a40;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #007bff;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.5);
        }

    .btn-custom {
        font-weight: bold;
        border-radius: 6px;
        padding: 10px 15px;
        transition: 0.3s;
    }

    .btn-create {
        background: #28a745;
        color: white;
    }

        .btn-create:hover {
            background: #218838;
        }

    .btn-back {
        background: #6c757d;
        color: white;
    }

        .btn-back:hover {
            background: #5a6268;
        }
</style>

<!-- Create Drug Container -->
<div class="container-box">
    <h2 class="text-center text-primary"><i class="fas fa-pills"></i> Create New Drug</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.WarehouseID, new { @class = "form-label" })
            @Html.EditorFor(model => model.WarehouseID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.WarehouseID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.StockQuantity, new { @class = "form-label" })
            @Html.EditorFor(model => model.StockQuantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StockQuantity, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.ExpiryDate, new { @class = "form-label" })
            @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Type, new { @class = "form-label" })
            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-create btn-custom">
                <i class="fas fa-save"></i> Create
            </button>
            <a href="@Url.Action("Index")" class="btn btn-back btn-custom">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    }
</div>

<!-- Include FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
