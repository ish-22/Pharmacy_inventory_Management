@model IEnumerable<Supplier.Models.Tender>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background: linear-gradient(135deg, #1e2a44 0%, #4a69bd 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        padding: 20px;
        max-width: 1200px;
        margin: 20px auto;
    }

    h2 {
        color: #fff;
        text-align: center;
        padding: 20px 0;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        font-weight: 700;
    }

    .table-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    th {
        background: #6b48ff;
        color: white;
        padding: 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    td {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
        color: #34495e;
    }

    tr:nth-child(even) {
        background: #f8f9fa;
    }

    tr:hover {
        background: #e9ecef;
        transition: all 0.3s ease;
    }

    .btn-create {
        display: inline-block;
        padding: 10px 20px;
        background: #2ecc71;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        font-weight: 600;
    }

        .btn-create:hover {
            background: #27ae60;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    .btn-edit {
        color: #e67e22;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background: #e67e22;
            color: white;
        }

    .btn-details {
        color: #3498db;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-details:hover {
            background: #3498db;
            color: white;
        }

    .btn-delete {
        color: #e74c3c;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: #e74c3c;
            color: white;
        }
</style>

<div class="container">
    <h2>Tender Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn-create" })
    </p>

    <div class="table-container">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DrugName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.publishedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.closingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DrugName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.publishedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.closingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-edit" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn-details" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-delete" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>