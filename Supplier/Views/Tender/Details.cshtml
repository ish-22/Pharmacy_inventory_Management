@model Supplier.Models.Tender

@{
    ViewBag.Title = "Tender Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tender Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #6B48FF, #00DDEB);
            min-height: 100vh;
            padding: 40px;
            color: #ffffff;
        }

        h2 {
            color: #ffffff;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
        }

        .details-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            max-width: 700px;
            margin: 0 auto;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .dl-horizontal {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

            .dl-horizontal dt {
                color: #E0E0FF;
                font-weight: 500;
                width: 200px;
                text-align: right;
                padding: 10px 15px;
            }

            .dl-horizontal dd {
                color: #ffffff;
                flex: 1;
                padding: 10px 15px;
                margin: 0;
            }

        .action-links {
            display: flex;
            justify-content: space-between;
            gap: 15px;
        }

        .edit-link {
            background: linear-gradient(45deg, #4facfe, #00f2fe);
            color: #ffffff;
            font-weight: 600;
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .edit-link:hover {
                background: linear-gradient(45deg, #3d8cdc, #00d0dc);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
                color: #ffffff;
                text-decoration: none;
            }

        .back-link {
            background: linear-gradient(45deg, #6B48FF, #00DDEB);
            color: #ffffff;
            font-weight: 600;
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .back-link:hover {
                background: linear-gradient(45deg, #5436CC, #00BAC7);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(107, 72, 255, 0.4);
                color: #ffffff;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="details-container">
        <h2>Tender Details</h2>

        <div>
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.DrugName)</dt>
                <dd>@Html.DisplayFor(model => model.DrugName)</dd>

                <dt>@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd>@Html.DisplayFor(model => model.Quantity)</dd>

                <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                <dd>@Html.DisplayFor(model => model.Description)</dd>

                <dt>@Html.DisplayNameFor(model => model.publishedDate)</dt>
                <dd>@Html.DisplayFor(model => model.publishedDate)</dd>

                <dt>@Html.DisplayNameFor(model => model.closingDate)</dt>
                <dd>@Html.DisplayFor(model => model.closingDate)</dd>

                <dt>@Html.DisplayNameFor(model => model.Status)</dt>
                <dd>@Html.DisplayFor(model => model.Status)</dd>
            </dl>
        </div>

        <div class="action-links">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="edit-link">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Index")" class="back-link">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>