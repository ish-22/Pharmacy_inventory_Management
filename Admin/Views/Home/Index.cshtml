@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        /* Background Image */
        body {
            background: linear-gradient(135deg, #6B48FF, #00DDEB);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Glassmorphism Effect */
        .login-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 15px;
            padding: 35px;
            width: 500px;
            height: 400px;
            text-align: center;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .login-container h2 {
                margin-bottom: 25px;
                font-weight: 700;
                color: #ffffff;
            }

        .form-control {
            background: rgba(255, 255, 255, 0.25);
            border: none;
            color: #ffffff;
            border-radius: 8px;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .input-group-text {
            background: rgba(255, 255, 255, 0.25);
            border: none;
            color: #ffffff;
            border-radius: 8px 0 0 8px;
        }

        .btn-login {
            background: linear-gradient(45deg, #6B48FF, #00DDEB);
            color: #ffffff;
            font-weight: 600;
            border: none;
            border-radius: 25px;
            padding: 12px;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background: linear-gradient(45deg, #5436CC, #00BAC7);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(107, 72, 255, 0.4);
            }

        .links a {
            color: #E0E0FF;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .links a:hover {
                color: #ffffff;
                text-decoration: underline;
            }

        .alert-danger {
            background: rgba(255, 75, 75, 0.2);
            border: none;
            color: #ffcccc;
        }

        label {
            color: #E0E0FF;
        }
    </style>
</head>
<body>

    <!-- Login Form Container -->
    <div class="login-container">
        <h2>Admin Login</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form method="post" action="@Url.Action("Index", "Home")">
            @Html.AntiForgeryToken()

            <!-- Email Input -->
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
                <input type="email" name="email" class="form-control" placeholder="Email" required>
            </div>

            <!-- Password Input -->
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="d-flex justify-content-between mb-4">
                <div>
                    <input type="checkbox" id="rememberMe">
                    <label for="rememberMe">Remember Me</label>
                </div>
                <div>
                    <a href="#" class="links">Forgot Password?</a>
                </div>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-login w-100">Login</button>

            <!-- Register Link -->
            <div class="mt-3">
                <span>Don't have an account? <a href="@Url.Action("Create", "Admin")" class="links">Register</a></span>
            </div>
        </form>
    </div>

</body>
</html>