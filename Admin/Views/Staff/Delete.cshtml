@model Admin.Models.Staff

@{
    ViewBag.Title = "Delete";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .container {
        padding: 20px;
        max-width: 800px;
        margin: 20px auto;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    h2 {
        color: #2c3e50;
        text-align: center;
        padding: 20px 0;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    h3 {
        color: #e74c3c;
        text-align: center;
        margin: 15px 0;
    }

    h4 {
        color: #34495e;
        margin: 20px 0;
    }

    .dl-horizontal {
        padding: 20px;
    }

        .dl-horizontal dt {
            color: #2c3e50;
            font-weight: 600;
            width: 150px;
            padding: 10px 0;
        }

        .dl-horizontal dd {
            margin-left: 180px;
            padding: 10px 0;
            color: #555;
        }

    hr {
        border: 0;
        height: 1px;
        background: #eee;
        margin: 20px 0;
    }

    .form-actions {
        padding: 20px;
        text-align: center;
    }

    .btn-delete {
        background: #e74c3c;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 0 10px;
    }

        .btn-delete:hover {
            background: #c0392b;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

    .btn-back {
        display: inline-block;
        padding: 10px 20px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin: 0 10px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
</style>

<div class="container">
    <h2>Delete Staff</h2>
    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>Staff Information</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Password)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn-delete" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-back" })
            </div>
        }
    </div>
</div>