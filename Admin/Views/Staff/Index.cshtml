@model IEnumerable<Admin.Models.Staff>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        color: #2c3e50;
        text-align: center;
        padding: 20px 0;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    th {
        background: #3498db;
        color: white;
        padding: 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    td {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
    }

    tr:nth-child(even) {
        background: #f8f9fa;
    }

    tr:hover {
        background: #f1f3f5;
        transition: all 0.3s ease;
    }

    .btn-create {
        display: inline-block;
        padding: 10px 20px;
        background: #2ecc71;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

        .btn-create:hover {
            background: #27ae60;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

    .btn-edit {
        color: #e67e22;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background: #e67e22;
            color: white;
        }

    .btn-details {
        color: #3498db;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-details:hover {
            background: #3498db;
            color: white;
        }

    .btn-delete {
        color: #e74c3c;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: #e74c3c;
            color: white;
        }
</style>

<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn-create" })
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-edit" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn-details" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-delete" })
                </td>
            </tr>
        }
    </table>
</div>